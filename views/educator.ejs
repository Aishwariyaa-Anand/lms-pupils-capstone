<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Course Selection</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1 class="head">Welcome!</h1>
        <div style="text-align: right;"><a href="/signout"><button style="background-color: crimson;" type="button">Signout</button></a></div>
        <h3>Administrative actions</h3>
        <a href="/createcourse"><button>Create a new course</button></a><br><br>
        <button><a href="#">View Reports</a></button><br><br>
    </header>
    <hr>
    <main>
        <section id="avail">
            <p style="text-align: center;" id="avail">Available Courses</p>
            <div class="cards">
                <% courses.forEach(course => { %>
                    <% if (!course.enrolled) { %>
                        <div class="card">
                            <div class="card-header"><%= course.name %></div>
                            <div class="card-footer">
                                <a href="/viewcourse/<%= course.id %>"><button>View Course</button></a>
                                <form action="/enroll/<%= course.id %>" method="post">
                                    <button type="submit">Enroll</button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                <% }); %>
            </div>
        </section>
    </main>
</body>
</html>