<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My LMS</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('eduheader.ejs') %>
    <div style="text-align: right;"><a href="/createcourse"><button>Create course</button></a><br><br></div>
    <p style="text-align: center;" id="avail">My Courses</p>
    <div class="cards">
        <% courses.forEach(course => { %>
            <% if (!course.enrolled) { %>
                <div class="card">
                    <div class="card-header"><%= course.name %></div>
                    <div class="card-footer">
                        <a href="/educourse/<%= course.id %>"><button>View Course</button></a>
                    </div>
                </div>
            <% } %>
        <% }); %>
    </div>
</body>
</html>