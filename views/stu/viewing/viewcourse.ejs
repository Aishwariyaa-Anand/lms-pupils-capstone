<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My LMS</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .chapapa {
        background-color: whitesmoke;
        color: black;
        border: 1px solid black;
        border-radius: 2px;
        width: 40%;
        overflow:auto;
        text-align: left;
    }
  </style>
</head>
<body>
  <%- include('../stuheader.ejs') %>
  <section>
    <h1><%= coursename || 'No Name' %></h1>
    <%= eduname || 'No Name' %> <br>
    <%= date || 'No Name' %>
    <br><br>
    <form action="/enroll/<%= courseid %>" method="post">
      <button type="submit"><%= enrollButton || 'No Name' %></button>
    </form>
    <h3><u><b><%= chapterTitle || 'No Name' %></b></u></h3>
    <% chapters.forEach(chapter => { %>
      <button class="chapapa" disabled><%= chapter.name || 'No Name' %></button><br><br>
    <% }); %>
  </section>
  <%- include('../stufooter.ejs') %>
</body>
</html>