<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My LMS</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .chapapa {
        background-color: whitesmoke;
        color: black;
        border: 1px solid black;
        border-radius: 2px;
        width: 40%;
        overflow:auto;
        text-align: left;
    }
  </style>
</head>
<body>
  <%- include('../stuheader.ejs') %>
  <h1><%= chapname %></h1>
  <p><%= chapdesc %></p>
  <h3><u><b>Pages</b></u></h3>
  <% pages.forEach(page => { %>
    <a href="/viewpage/<%= page.id %>/<%= page.chapterId %>"><button class="chapapa"><%= page.title %></button></a><br><br>
  <% }); %>
  <%- include('../stufooter.ejs') %>
</body>
</html>